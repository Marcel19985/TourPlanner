<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx/23.0.1"
          xmlns:fx="http://javafx.com/fxml/1"
          fx:id="tourDetailsPane"
          fx:controller="org.example.tourplanner.ui.controllers.TourViewController"
          hgap="10" vgap="10"
          visible="false">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <!-- Name -->
    <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <Label fx:id="nameLabel" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

    <!-- Beschreibung -->
    <Label text="Description:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <Label fx:id="descriptionLabel" wrapText="true" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

</GridPane>
